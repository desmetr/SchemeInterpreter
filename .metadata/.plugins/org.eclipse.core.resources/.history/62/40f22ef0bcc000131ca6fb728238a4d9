#ifndef DFA_H_
#define DFA_H_
#include "Automaton.h"

class DFA: public Automaton {
public:
	DFA();
	virtual ~DFA();

	bool readChar(char theChar);
	bool readString(std::string theString);
	bool readUntilAccepted(std::string theString);
	bool accepted();
};

#endif /* DFA_H_ */
